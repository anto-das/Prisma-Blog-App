generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  post_id    String     @id @unique @default(uuid())
  title      String     @db.VarChar(220)
  content    String     @db.Text
  authorId   String
  thumbnail  String?
  isFeatured Boolean    @default(false)
  tags       String[]
  views      Int        @default(0)
  status     PostStatus @default(PUBLISHED)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  comments Comment[]

  @@index([authorId])
  @@map("posts")
}

model Comment {
  comment_id String        @id @unique @default(uuid())
  title      String        @db.VarChar(220)
  authorId   String
  status     CommentStatus @default(APPROVED)
  postId     String
  posts      Post          @relation(fields: [postId], references: [post_id])
  parentId   String?
  parent     Comment?      @relation("parentReply", fields: [parentId], references: [comment_id])
  replies    Comment[]     @relation("parentReply")
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([authorId])
  @@index([postId])
  @@map("comments")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum CommentStatus {
  APPROVED
  REJECTED
}
